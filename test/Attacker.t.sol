pragma solidity ^0.8.13;

import "forge-std/Test.sol";
import "../src/Bank.sol";
import "../src/Attacker.sol";
import "@openzeppelin/contracts/token/ERC777/ERC777.sol";

contract MToken is ERC777 {
	constructor(string memory name, string memory symbol,uint256 supply, address[] memory defaultOperators) ERC777(name,symbol,defaultOperators) {
		_mint(msg.sender, supply, "","" );
	}
}

contract AttackerTest is Test {
    Bank public bank;
	ERC777 public token;
	Attacker public attacker;

	uint256 admin_sk = uint256(keccak256(abi.encodePacked("Admin")));
	address admin = vm.addr(admin_sk);

    function setUp() public {
		//https://github.com/foundry-rs/foundry/discussions/1269
		vm.etch(
			address(0x1820a4B7618BdE71Dce8cdc73aAB6C95905faD24),
			bytes( hex'')
		);
        bank = new Bank(admin);
		token = ERC777(bank.token());
    }
	
    function testSetTarget(address attacker_address) public {
		vm.assume( attacker_address != address(0) );

		attacker = new Attacker(attacker_address);
		vm.prank(attacker_address);
		attacker.setTarget(address(bank));
		assertEq( address(token), address( attacker.bank().token() ));

    }

	/*
	   Attacker contract should only be willing to receive the bank's ERC777 token
	*/
	function testRejectToken( uint256 amt ) public {
		vm.assume( amt > 0 );
		vm.startPrank(admin);
		address[] memory empty;
		MToken mtoken = new MToken( "Harpymimus", "HARP", 10**30, empty);
		vm.expectRevert();
		mtoken.send( address(attacker), amt % 10**30, "" );
		vm.stopPrank();
	}


	/*
	*/
    function testAttack(address attacker_address, uint256 _amt) public {
		vm.assume( _amt > 0 );
		vm.assume( attacker_address != address(0) );
		vm.assume( attacker_address != address(bank) );
		vm.assume( attacker_address != address(token) );
	
		uint256 amt = bound( _amt, 1, 2**128 ); //https://book.getfoundry.sh/reference/forge-std/bound

		testSetTarget(attacker_address);
		vm.deal(attacker_address,amt);

		uint256 old_balance = token.balanceOf(address(attacker));
		console.log( "old_balance = %d", old_balance);
		console.log( "deposit amount = %d", amt );
		vm.prank(attacker_address);
		attacker.attack{value:amt}(amt);
		uint256 new_balance = token.balanceOf(address(attacker));

		console.log( "old balance = %d", old_balance );
		console.log( "new balance = %d", new_balance );
		assertGt( new_balance, old_balance + amt );

    }

    function testWithdraw(address user, address attacker_address, uint256 _amt) public {
		vm.assume( _amt > 0 );
		vm.assume( attacker_address != address(0) );
		vm.assume( user != address(0x1820a4B7618BdE71Dce8cdc73aAB6C95905faD24) );
		vm.assume( user != address(0x4e59b44847b379578588920cA78FbF26c0B4956C) ); //https://github.com/foundry-rs/foundry/issues/1159
		vm.assume( user != address(0xCe71065D4017F316EC606Fe4422e11eB2c47c246) );
		vm.assume( user != address(0x185a4dc360CE69bDCceE33b3784B0282f7961aea) );
		vm.assume( user != address(0x7109709ECfa91a80626fF3989D68f67F5b1DD12D) );
		vm.assume( user != address(this) );
		vm.assume( user != address(token) );

		uint256 old_token_balance = token.balanceOf(attacker_address);
		testAttack( attacker_address, _amt );
		uint256 old_token_balance_contract = token.balanceOf(address(attacker));
		assertGt( old_token_balance_contract, 0 );
		vm.prank(attacker_address);
		attacker.withdraw(attacker_address);
		uint256 new_token_balance = token.balanceOf(attacker_address);

		assertEq( token.balanceOf(address(attacker)), 0 );
		assertEq( new_token_balance, old_token_balance + old_token_balance_contract );
    }


}
